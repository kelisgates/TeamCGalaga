<Page
    x:Class="Galaga.View.GameCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    

    <Canvas x:Name="canvas" Width="720" Height="600" Background ="Black">

        <TextBlock Text="{Binding LivesTextBlock}" x:Name="livesTextBlock" Canvas.Left="0" TextWrapping="Wrap" Canvas.Top="15" RequestedTheme="Light" FontSize="22" FocusVisualPrimaryBrush="Black" Foreground="White" />
        <TextBlock Text="{Binding ScoreTextBlock}" x:Name="scoreTextBlock" Canvas.Left="55" TextWrapping="Wrap"  Canvas.Top="256" RequestedTheme="Light" FontSize="22" FocusVisualPrimaryBrush="Black" Foreground="White" />
        <TextBlock Text="{Binding LevelTextBlock}" x:Name="levelTextBlock" Canvas.Left="55" TextWrapping="Wrap"  Canvas.Top="300" RequestedTheme="Light" FontSize="22" FocusVisualPrimaryBrush="Black" Foreground="White" />
    </Canvas>
</Page>
