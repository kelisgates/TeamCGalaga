
<Page
    x:Class="Galaga.View.GameCanvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:model="using:Galaga.Model" d:DataContext="{d:DesignInstance Type=model:ScoreManager}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    

    <Canvas x:Name="canvas" Width="640" Height="480" Background ="Black">
        <TextBlock Canvas.Left="445" TextWrapping="Wrap" Text="{Binding Score}" Canvas.Top="240" Foreground="White" FontSize="24"/>
        <TextBlock x:Name="gameWonTextBlock" Text="You Win!" Foreground="DarkSeaGreen" FontSize="48" HorizontalTextAlignment="Center" Visibility="Collapsed"/>
    </Canvas>
</Page>
